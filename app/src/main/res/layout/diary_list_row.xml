        <TextView
       	    android:id="@+id/idDiaryEntry"
       	    android:layout_width="wrap_content"
       	    android:layout_height="wrap_content"       	    
       	    android:layout_gravity="right"
       	    android:text="x"

       	    android:textIsSelectable="false"
       	    android:visibility="gone" />

